# Note: PS1 and umask are already set in /etc/profile. You should not
# need this unless you want different defaults for root.
# PS1='${debian_chroot:+($debian_chroot)}\h:\w\$ '
# umask 022

# You may uncomment the following lines if you want `ls' to be colorized:
# export LS_OPTIONS='--color=auto'
# eval "$(dircolors)"
# alias ls='ls $LS_OPTIONS'
# alias ll='ls $LS_OPTIONS -l'
# alias l='ls $LS_OPTIONS -lA'
#
# Some more alias to avoid making mistakes:
# alias rm='rm -i'
# alias cp='cp -i'
# alias mv='mv -i'
. "$HOME/.cargo/env"
alias lighthouse_log="journalctl -xeu lighthouse.service -f --output cat"
alias lighthouse2_log="journalctl -xeu lighthouse2.service -f --output cat"
alias reth_log="journalctl -xeu reth.service -f --output cat"
alias reth2_log="journalctl -xeu reth2.service -f --output cat"

alias angstrom_log="journalctl -xeu angstrom-sepolia.service -f --output cat"
alias angstrom_log2="journalctl -xeu angstrom-sepolia2.service -f --output cat"

alias build_angstrom="cargo build --release --no-default-features --features testnet-sepolia,jemalloc,jemalloc-prof"
alias deploy_angstrom_main="systemctl stop angstrom-sepolia && systemctl stop angstrom-sepolia2 && build_angstrom_fast && systemctl start angstrom-sepolia && systemctl start angstrom-sepolia2"
alias build_angstrom_fast="cd /root/angstrom && git pull && git checkout main && git pull && cargo build --profile debug-fast --bin angstrom --features jemalloc,testnet-sepolia --manifest-path ./bin/angstrom/Cargo.toml && cp ./target/debug-fast/angstrom ~/bin"

deploy_branch_fast() {
	systemctl stop angstrom-sepolia
	systemctl stop angstrom-sepolia2
	cd /root/angstrom
	git checkout main
	git pull
	git checkout $1
	git pull
	cargo build --profile debug-fast --bin angstrom --features jemalloc,testnet-sepolia --manifest-path ./bin/angstrom/Cargo.toml
	cp ./target/debug-fast/angstrom ~/bin
	systemctl start  angstrom-sepolia
	systemctl start angstrom-sepolia2
}

export PATH="$PATH:/root/.foundry/bin"
